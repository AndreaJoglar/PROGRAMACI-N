package ficheros2_1_4;

public class ejercicio02 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		/* primera columna dibujar 1 columna++
		 * segunda dibujar 2 columna++
		 * tercera dibujar 3 columna++
		 * cuarta dibujar 4 columna++
		 */
		
		for (int contFila = 1; contFila <= 7; contFila++) {
			System.out.println();
			int num = 1;
			for (int contColumna = 1; contColumna <= contFila; contColumna++) {
				if (contColumna > 1) {
					num++;
				}
				System.out.print(num+" ");
			}
		}

	}

}
