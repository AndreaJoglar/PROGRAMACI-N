package Ficheros;

public class ejercicio_04 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int tablero [][]=Libreria.generarTablero();
		Libreria.mostrarMatriz(tablero);
		
		System.out.println("Barco1 colocado: ");
		Libreria.colocarBarcoFila(tablero, 1, 2, 3);
		Libreria.mostrarMatriz(tablero);
		
		System.out.println("Barco 2 colocado:");
		Libreria.colocarBarcoFila(tablero, 2, 0, 2);
		Libreria.mostrarMatriz(tablero);
		
		System.out.println("Barco 3 colocado:");
		Libreria.colocarBarcoFila(tablero, 0, 0, 4);
		Libreria.mostrarMatriz(tablero);
		
		Libreria.colocarBarcoFila(tablero, 1, 1, 3);
		Libreria.mostrarMatriz(tablero);
		/*
		Libreria.colocarBarcoFila(tablero, 2, 2, 4);
		*/
	}

}
